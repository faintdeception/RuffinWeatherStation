@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">RuffinWeatherStation</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <a class="nav-link @(IsCurrentUri("") ? "active" : "")" href="">
                <span class="bi bi-cloud-sun" aria-hidden="true"></span> Weather Dashboard
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link @(IsCurrentUri("weather") ? "active" : "")" href="weather">
                <span class="bi bi-thermometer-half" aria-hidden="true"></span> Weather Data
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link @(IsCurrentUri("notes") ? "active" : "")" href="notes">
                <span class="bi bi-journal-text" aria-hidden="true"></span> Weather Notes
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link @(IsCurrentUri("apitest") ? "active" : "")" href="apitest">
                <span class="bi bi-plug-fill-nav-menu" aria-hidden="true"></span> API Connection Test
            </a>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
    private bool IsCurrentUri(string uri)
    {
        // Use NavigationManager to properly determine current URI
        var currentUri = System.IO.Path.GetFileName(new Uri(NavigationManager.Uri).LocalPath);
        return string.Equals(currentUri, uri, StringComparison.OrdinalIgnoreCase) ||
               (string.IsNullOrEmpty(currentUri) && string.IsNullOrEmpty(uri));
    }
}
